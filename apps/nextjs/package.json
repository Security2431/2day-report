    "@acme/eslint-config": "workspace:^0.2.0",
    "@acme/prettier-config": "workspace:^0.1.0",
    "@acme/tailwind-config": "workspace:^0.1.0",
    "@acme/tsconfig": "workspace:^0.1.0",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^9.1.1",
    "jiti": "^1.21.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
